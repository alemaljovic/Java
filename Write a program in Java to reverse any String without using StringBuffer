public class Main {
  public static void main(String[] args) {
    String input = "Hello World!";

    // Create a new char array to store the reversed string
    char[] reversed = new char[input.length()];

    // Loop through the input string in reverse order
    for (int i = input.length() - 1, j = 0; i >= 0; i--, j++) {
      // Copy each character from the input string to the reversed char array
      reversed[j] = input.charAt(i);
    }

    // Create a new string from the reversed char array
    String output = new String(reversed);

    System.out.println("Original string: " + input);
    System.out.println("Reversed string: " + output);
  }
}
